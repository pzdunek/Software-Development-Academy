// Javascript. Funkcja sprawdzajÄ…ca, czy dany wyraz jest palindromem.

function czyPalindrom(wyraz) {
  if (wyraz == wyraz.split("").reverse().join("")) {
    console.log(wyraz + " jest palindromem")
  } else {
    console.log(wyraz + " nie jest palindromem")
  }

}
console.log(czyPalindrom("kajak"));
